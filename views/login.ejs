<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <meta http-equiv="X-UA-Compatible" content="ie=edge" />
      <link rel="stylesheet" href="/resources/css/login.css" />
      <title>ShowFood</title>
   </head>
   <body>
      <div class="all">
         <div class="menu">
            <a id="name_menu">Show Food</a>
         </div>
         <div class="login">
            <div class="login_title">
               <span>Bienvenido a ShowFood</span>
            </div>
            <div class="login_fields">
               <form action="/login" method="POST">
                  <div class="login_fields_user">
                     <div class="icon">
                        <img src="/resources/css/images/usericon.png" width="19px" height="19px " />
                     </div>
                     <input placeholder="Email" type="text" name="login_email" />
                  </div>
                  <div class="login_fields_password">
                     <div class="icon">
                        <img src="/resources/css/images/passicon.png" width="22px" height="22px " />
                     </div>
                     <input placeholder="Contrase침a" type="password" name="login_pass" />
                  </div>
                  <button class="login_fields_button" id="login_button" type="submit" role="button" value="Log In">
                  <span class="text">ENTRAR</span>
                  </button>
               </form>
               <button class="login_fields_button" id="register_button" onclick="window.location.href='/register'">
               REGISTRARSE
               </button>
               <div>
                  <p id="error-message" class="error-message"></p>
                  <p id="successful-message" class="successful-message"></p>
               </div>
            </div>
            <div class="disclaimer">
               <p>Aplicaci칩n web de Alvaro Benayas Aranda</p>
            </div>
         </div>
      </div>
      </div>
      <% if (alert1) { %>
      <script>
         document.getElementById("error-message").innerHTML = "Debe completar todos los campos para iniciar sesi칩n.";
         document.getElementById("error-message").addEventListener("click", function () {
           window.location.href = "/login";
         });
      </script>
      <% } %>
      <% if (alert2) { %>
      <script>
         document.getElementById("error-message").innerHTML = "Usuario/Contrase침a incorrecta.";
         document.getElementById("error-message").addEventListener("click", function () {
           window.location.href = "/login";
         });
      </script>
      <% } %>
      <% if (alert3) { %>
      <script>
         window.onload = function () {
           alert("Login correcto");
         };
      </script>
      <% } %>
   </body>
</html>